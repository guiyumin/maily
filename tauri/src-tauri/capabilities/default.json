{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:webview:allow-internal-toggle-devtools",
    "opener:default",
    "updater:default",
    "process:allow-restart",
    "process:allow-exit",
    "notification:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*" }
      ]
    }
  ]
}
